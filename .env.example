# Philips Hue Bridge Configuration
HUE_BRIDGE_IP=192.168.1.100
HUE_USERNAME=your-hue-username-here

# Auto-discovery (set to false if you want to use specific bridge IP)
HUE_AUTO_DISCOVER=true

# Server Configuration
HUE_PORT=8080

# Cache Configuration
CACHE_TTL=300

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Development
APP_ENV=production
LOG_LEVEL=info