{
    "name": "oguzhant/philips-hue-client",
    "description": "A modern, fully-featured PHP client for Philips Hue smart lights",
    "type": "library",
    "license": "MIT",
    "keywords": ["philips", "hue", "smart-lights", "cli", "api-client", "laravel", "symfony", "smart-lights", "iot", "home-automation", "php"],
    "authors": [
        {
            "name": "Oguzhan Togay",
            "email": "ogitog@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "clue/buzz-react": "^2.0",
        "doctrine/instantiator": "^1.5.0",
        "guzzlehttp/guzzle": "^7.0",
        "nesbot/carbon": "~2.66.0",
        "psr/log": "^1.1|^2.0|^3.0",
        "react/event-loop": "^1.0",
        "slim/psr7": "^1.0",
        "slim/slim": "^4.0",
        "symfony/console": "^5.0,<5.4.40",
        "symfony/finder": "^5.4,<6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.5",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "zircote/swagger-php": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "OguzhanTogay\\HueClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OguzhanTogay\\HueClient\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/hue",
        "bin/hue-server"
    ],
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "analyse": "vendor/bin/phpstan analyse --memory-limit=256M",
        "cs": "vendor/bin/phpcs --standard=PSR12 src/",
        "cs-fix": "vendor/bin/phpcbf --standard=PSR12 src/",
        "serve": "php -S localhost:8080 public/api.php",
        "swagger": "vendor/bin/openapi src/ -o docs/openapi.json",
        "docs": "vendor/bin/openapi src/ -o docs/openapi.yaml --format yaml"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable"
}
